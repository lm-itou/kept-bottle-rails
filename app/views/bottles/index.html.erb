<p>Logged in as <%= current_user.name %> <small><%= link_to 'Log out', destroy_user_session_path, method: :delete %></small></p>

<h1>Bottles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Pic</th>
      <th>Restaurant</th>
      <th>Status</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bottles.each do |bottle| %>
      <tr>
        <td>
          <% if bottle.picture.attached? %>
            <%= image_tag bottle.picture, class: "img img-rounded", style: "max-height: 60px" %>
          <% end %>
        </td>
        <td><%= bottle.restaurant.name %></td>
        <td><%= bottle.status %></td>
        <td><%= bottle.updated_at.strftime("%F %T") %></td>
        <td><%= link_to 'Show', bottle %></td>
        <td><%= link_to 'Edit', edit_bottle_path(bottle) %></td>
        <td><%= link_to 'Destroy', bottle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Bottle', new_bottle_path, class: "btn btn-primary" %>
