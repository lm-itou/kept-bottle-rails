<div class="row">
  <div class="col-6">
<p>
  <strong>Restaurant:</strong>
  <%= @bottle.restaurant_id %>
</p>

<p>
  <strong>User:</strong>
  <%= @bottle.user_id %>
</p>

<p>
  <strong>Status:</strong>
  <%= @bottle.status %>
</p>
  </div>
  <div class="col-6">
  <% if @bottle.picture.attached? %>
    <%= image_tag @bottle.picture.variant(resize:'300x300'), class: "img img-responsive img-rounded", style: "max-height: 360px" %>
  <% else %>
    picture not found
  <% end %>
  </div>
</div>

<p class="mt-3">
<%= link_to '<i class="bi bi-pencil-square"></i> 編集する'.html_safe, edit_bottle_path(@bottle), class: "btn btn-sm btn-light" %>
<%= link_to '<i class="bi bi-list"></i> 登録済みボトルの一覧'.html_safe, bottles_path, class: "btn btn-sm btn-light" %>
</p>